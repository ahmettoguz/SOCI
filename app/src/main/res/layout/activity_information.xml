<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">

    <TextView
        android:id="@+id/Information_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" My Information"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/Information_Image"
        android:layout_width="157dp"
        android:layout_height="138dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="75dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Information_surname"
        tools:layout_editor_absoluteX="194dp" />

    <TextView
        android:id="@+id/Information_surname"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Information_mail"
        tools:layout_editor_absoluteX="194dp" />

    <TextView
        android:id="@+id/Information_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Information_editInformation"
        tools:layout_editor_absoluteX="194dp" />

    <Button
        android:id="@+id/Information_editInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit "
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="286dp" />
</androidx.constraintlayout.widget.ConstraintLayout>