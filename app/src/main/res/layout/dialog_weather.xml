<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_theme_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp10"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogWeather_Iv1_Img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingHorizontal="@dimen/dp5"
            android:paddingVertical="@dimen/dp5"
            app:srcCompat="@drawable/weather_cloudy" />

        <TextView
            android:id="@+id/dialogWeather_Tv1_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_gravity="center"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="@dimen/text_Size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp10"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogWeather_Iv2_Img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingHorizontal="@dimen/dp5"
            android:paddingVertical="@dimen/dp5"
            app:srcCompat="@drawable/weather_cloudy" />

        <TextView
            android:id="@+id/dialogWeather_Tv2_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_gravity="center"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="@dimen/text_Size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp10"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogWeather_Iv3_Img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:paddingHorizontal="@dimen/dp5"
            android:paddingVertical="@dimen/dp5"
            app:srcCompat="@drawable/weather_cloudy" />

        <TextView
            android:id="@+id/dialogWeather_Tv3_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_gravity="center"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="@dimen/text_Size" />

    </LinearLayout>

    <Button
        android:id="@+id/dialogWeather_Btn_Close"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp10"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:text="Close"
        android:textSize="@dimen/text_Size" />
</LinearLayout>