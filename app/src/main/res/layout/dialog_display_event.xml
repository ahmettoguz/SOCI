<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme_2"
    android:orientation="vertical"
    tools:context=".Ui.UserInformationFragment">

    <TextView
        android:id="@+id/event_TV_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shadow"
        android:paddingVertical="@dimen/dp10"
        android:text="Event Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/header_Size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_marginHorizontal="@dimen/dp5"
        android:layout_marginTop="2dp"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_Iv_Category"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/dp5"
            android:paddingVertical="@dimen/dp5"
            android:src="@drawable/category_all" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_TV_Description"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text="Description : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Start Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_Size" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="End Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_Size" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/event_TV_StartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Start Date..."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/event_TV_EndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="End Date.."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_TV_Place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:gravity="center"
                android:text="Place : "
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_TV_Quota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:gravity="center"
                android:text="Quota : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/shadow"
            android:orientation="vertical">


            <Button
                android:id="@+id/event_Btn_Call"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:backgroundTint="@color/material_dynamic_secondary10"
                android:drawableRight="@android:drawable/sym_action_call"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center"
                android:text="Call"
                android:textAllCaps="false"
                android:textSize="@dimen/text_Size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/event_Btn_JoinLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="2dp"
                    app:srcCompat="@drawable/actn_add_event" />

                <ImageView
                    android:id="@+id/event_Btn_Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="2dp"
                    app:srcCompat="@drawable/actn_delete_event" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>