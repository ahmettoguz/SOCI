<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:orientation="vertical"
    tools:context=".Ui.UserInformationFragment">

    <TextView
        android:id="@+id/userInformation_Tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shadow"
        android:paddingVertical="@dimen/dp10"
        android:text="@string/user_informations"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/header_Size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userInformation_Iv_Gender"
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:layout_marginTop="@dimen/dp10"
            android:paddingVertical="@dimen/dp5"
            android:src="@drawable/category_all" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userInformation_Tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:text="Name      : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userInformation_Tv_Surname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:text="Surname : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp10"

            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userInformation_Tv_Email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:text="Email       : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userInformation_Tv_Phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:text="Phone      : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>