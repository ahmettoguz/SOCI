<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:orientation="vertical"
    tools:context=".Ui.UserEventFragment">

    <TextView
        android:id="@+id/userEvent_Tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shadow"
        android:paddingVertical="@dimen/dp10"
        android:text="@string/my_events"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/header_Size" />

    <Spinner
        android:id="@+id/userEvent_Sp_Filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shadow"
        android:entries="@array/filter_user_event" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userEvent_Rv_Events"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp5"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/userEvent_Btn_Weather"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp5"
            android:backgroundTint="@color/material_dynamic_secondary10"
            android:drawableRight="@android:drawable/ic_lock_idle_low_battery"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:text="Weather"
            android:textAllCaps="false"
            android:textSize="@dimen/text_Size" />

        <Button
            android:id="@+id/userEvent_Btn_Add"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp5"
            android:backgroundTint="@color/material_dynamic_secondary10"
            android:drawableRight="@android:drawable/ic_input_add"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="@dimen/text_Size" />
    </LinearLayout>


</LinearLayout>